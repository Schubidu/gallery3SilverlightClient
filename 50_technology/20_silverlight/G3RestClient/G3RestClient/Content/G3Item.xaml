<UserControl x:Class="G3RestClient.Content.G3Item"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Width="{Binding ThumbWidth}" Height="{Binding ThumbHeight}">
        <HyperlinkButton NavigateUri="{Binding G3Url}" TargetName="ContentFrame">
            <Grid>
                <Image HorizontalAlignment="Left" Source="{Binding ThumbUrl}" Stretch="Uniform" VerticalAlignment="Top" />
                <TextBlock Text="{Binding Title}"></TextBlock>
            </Grid>
        </HyperlinkButton>
    </Grid>
</UserControl>
