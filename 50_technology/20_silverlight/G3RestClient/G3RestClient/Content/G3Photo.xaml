<UserControl x:Class="G3RestClient.Content.G3Photo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot">
        <Image d:DesignHeight="300" x:Name="image1" d:DesignWidth="400" MaxHeight="{Binding Entity.G3Height}" MaxWidth="{Binding Entity.G3Width}" HorizontalAlignment="Center" Stretch="Uniform" VerticalAlignment="Center" />
        <!--<ProgressBar Height="42" HorizontalAlignment="Center" Margin="0" Name="progressBar1" Value="{Binding ImageDownload}" VerticalAlignment="Center" Width="301" />-->
    </Grid>
</UserControl>
